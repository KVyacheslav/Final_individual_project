@model Request
@{
    ViewData["Title"] = "Home Page";
}

<section class="u-align-center u-clearfix u-image u-section-1" src="" data-image-width="1400" data-image-height="644" id="sec-79e9">
    <div class="u-clearfix u-sheet u-sheet-1">
        <h1 class="u-align-left u-text u-text-body-alt-color u-text-default u-title u-text-1">
            -КОНСУЛЬТИНГ<br>&nbsp; &nbsp; БЕЗ РЕГИСТРАЦ<span style="font-weight: 400;"></span>ИИ И СМС
        </h1>
        <btn id="btn__request" class="u-active-palette-2-dark-1 u-border-none u-btn u-btn-round u-button-style u-palette-2-base u-radius-8 u-btn-1">Оставить заявку</btn>
    </div>
</section>
<section class="u-clearfix u-section-2 section__request-form" id="sec-3528">
    <div class="u-clearfix u-sheet u-sheet-1">
        <h2 class="u-text u-text-default u-text-1">Оставить заявки или задать вопрос</h2>
        <div class="u-form u-form-1">
            <form asp-controller="Home" asp-action="Index" method="post" class="u-clearfix u-form-spacing-15 u-form-vertical u-inner-form" style="padding: 15px;" source="email" name="form">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="u-form-group u-form-name u-label-none">
                    <label asp-for="Name" class="u-label">Name</label>
                    <input type="text" placeholder="Имя Фамилия" asp-for="Name" class="u-border-1 u-border-grey-30 u-input u-input-rectangle" required="">
                </div>

                <div class="u-form-email u-form-group u-label-none">
                    <label asp-for="Contact" class="u-label">Email</label>
                    <input type="email" placeholder="Email" asp-for="Contact" class="u-border-1 u-border-grey-30 u-input u-input-rectangle" required="">
                </div>

                <div class="u-form-group u-form-message u-label-none">
                    <label asp-for="Message" class="u-label">Message</label>
                    <textarea placeholder="Текст сообщения" rows="4" asp-for="Message" class="u-border-1 u-border-grey-30 u-input u-input-rectangle" required=""></textarea>
                </div>

                <div class="u-align-left u-form-group u-form-submit">
                    <a href="#" class="u-active-palette-1-dark-1 u-border-none u-btn u-btn-round u-btn-submit u-button-style u-radius-12">
                        Отправить<br>
                    </a>
                    <input type="submit" value="submit" class="u-form-control-hidden">
                </div>
                <div class="u-form-send-message u-form-send-success">Спасибо! Ваше обращение отправлено.</div>
                <div class="u-form-send-error u-form-send-message">Спасибо! Ваше обращение отправлено.</div>
                <input type="hidden" value="" name="recaptchaResponse">
                <input type="hidden" name="formServices" value="">
            </form>
        </div>
    </div>
</section>
