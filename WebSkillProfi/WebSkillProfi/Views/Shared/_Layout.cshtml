                        <li class="u-nav-item">
                            <a class="u-active-white u-button-style u-nav-link u-palette-1-base u-text-active-black u-text-hover-white" asp-controller="Services" asp-action="Index" style="padding: 10px 20px;">Услуги</a>
                        </li>
                        <li class="u-nav-item">
                            <a class="u-active-white u-button-style u-nav-link u-palette-1-base u-text-active-black u-text-hover-white" asp-controller="Projects" asp-action="Index" style="padding: 10px 20px;">Проекты</a>
                        </li>
                        <li class="u-nav-item">
                            <a class="u-active-white u-button-style u-nav-link u-palette-1-base u-text-active-black u-text-hover-white" asp-controller="Blogs" asp-action="Index" style="padding: 10px 20px;">Блог</a>
                        </li>
                        <li class="u-nav-item">
                            <a class="u-active-white u-button-style u-nav-link u-palette-1-base u-text-active-black u-text-hover-white" asp-controller="Contacts" asp-action="Index" style="padding: 10px 20px;">Контакты</a>
                        </li>
                    </ul>
                </div>
                <div class="u-custom-menu u-nav-container-collapse">
                    <div class="u-black u-container-style u-inner-container-layout u-opacity u-opacity-95 u-sidenav">
                        <div class="u-sidenav-overflow">
                            <div class="u-menu-close"></div>
                            <ul class="u-align-center u-nav u-popupmenu-items u-unstyled u-nav-2">
                                <li class="u-nav-item"><a class="u-button-style u-nav-link" asp-controller="Home" asp-action="Index">Главная</a></li>
                                <li class="u-nav-item"><a class="u-button-style u-nav-link" asp-controller="Services" asp-action="Index">Услуги</a></li>
                                <li class="u-nav-item"><a class="u-button-style u-nav-link" asp-controller="Projects" asp-action="Index">Проекты</a></li>
                                <li class="u-nav-item"><a class="u-button-style u-nav-link" asp-controller="Blogs" asp-action="Index">Блог</a></li>
